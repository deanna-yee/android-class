<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yee.roshambo.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:text="@string/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/infoTextView"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent" />

    <Button
        android:text="@string/rock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rockButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/lizardButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:text="@string/lizard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lizardButton"
        app:layout_constraintRight_toLeftOf="@+id/paperButton"
        app:layout_constraintLeft_toRightOf="@+id/rockButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>

    <Button
        android:text="@string/paper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/paperButton"
        app:layout_constraintLeft_toRightOf="@+id/lizardButton"
        app:layout_constraintRight_toLeftOf="@+id/spockButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>

    <Button
        android:text="@string/spock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spockButton"
        app:layout_constraintRight_toLeftOf="@+id/scissorsButton"
        app:layout_constraintLeft_toRightOf="@+id/paperButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>

    <Button
        android:text="@string/scissors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scissorsButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/spockButton"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/rps"
        android:id="@+id/rpsImageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/paperButton" />

</android.support.constraint.ConstraintLayout>