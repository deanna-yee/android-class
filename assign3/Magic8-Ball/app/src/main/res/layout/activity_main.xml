<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yee.magic8_ball.MainActivity">

    <TextView
        android:text="@string/think_of_a_question_and_ask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/statusText"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        app:layout_constraintLeft_toLeftOf="@+id/magicballImage"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main"
        android:textSize="24sp" />

    <Button
        android:text="@string/ask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/askButton"
        app:layout_constraintTop_toBottomOf="@+id/statusText"
        app:layout_constraintRight_toRightOf="@+id/statusText"
        app:layout_constraintLeft_toLeftOf="@+id/statusText"
        android:layout_marginTop="40dp"
        android:textSize="24sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/magicball"
        android:id="@+id/magicballImage"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        app:layout_constraintBottom_toTopOf="@+id/statusText"
        android:paddingLeft="100dp"
        android:paddingRight="100dp" />


</android.support.constraint.ConstraintLayout>
